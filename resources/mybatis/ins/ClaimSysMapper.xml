<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ClaimSysMapper">
	
	<!--表名 -->
	<sql id="tableName">
		INS_CLAIMSYS
	</sql>
	
	<sql id="tableStateName">
		INS_CLAIMSTATES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		POLICYNO,	
		INFORNAME,	
		RELATION,	
		EMAIL,	
		CLAIMERTEL,	
		OCCURTIME,	
		OCCURPLACE,	
		POLICYNAME,	
		POLICERTEL,	
		POLICEACCIDENT,	
		CLAIMSSTATES,	
		ISREMIND,
		LASTUPDATE,
		UPDATEFLAG,
		COURIERCOMPANY,
		COURIERNO,
		CLAIMSYS_ID
	</sql>
	
	<sql id="FieldState">	
		CLAIMSSTATES,	
		STATE_CONTENT,
		CLAIMSTATE_ID
	</sql>
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{POLICYNO},	
		#{INFORNAME},	
		#{RELATION},	
		#{EMAIL},	
		#{CLAIMERTEL},	
		#{OCCURTIME},	
		#{OCCURPLACE},	
		#{POLICYNAME},	
		#{POLICERTEL},	
		#{POLICEACCIDENT},	
		#{CLAIMSSTATES},	
		#{ISREMIND},
		#{LASTUPDATE},
		#{UPDATEFLAG},
		#{COURIERCOMPANY},
		#{COURIERNO},
		#{CLAIMSYS_ID}
	</sql>
	
	<sql id="FieldStateValue">
		#{CLAIMSSTATES},	
		#{STATE_CONTENT},	
		#{CLAIMSTATE_ID}
	</sql>
	
	<!-- 列出状态 -->
	<select id="listStates" parameterType="pd" resultType="pd">
		select CLAIMSSTATES,
		       STATE_CONTENT
		from 
		<include refid="tableStateName"></include>
		where 
			CLAIMSSTATES >= #{CLAIMSSTATES}
	</select>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			CLAIMSYS_ID = #{CLAIMSYS_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			POLICYNO = #{POLICYNO},
			INFORNAME = #{INFORNAME},
			RELATION = #{RELATION},
			EMAIL = #{EMAIL},
			CLAIMERTEL = #{CLAIMERTEL},
			OCCURTIME = #{OCCURTIME},
			OCCURPLACE = #{OCCURPLACE},
			POLICYNAME = #{POLICYNAME},
			POLICERTEL = #{POLICERTEL},
			POLICEACCIDENT = #{POLICEACCIDENT},
			CLAIMSSTATES = #{CLAIMSSTATES},
			ISREMIND = #{ISREMIND},
			LASTUPDATE = #{LASTUPDATE},
			UPDATEFLAG = #{UPDATEFLAG},
		CLAIMSYS_ID = CLAIMSYS_ID
		where 
		CLAIMSYS_ID = #{CLAIMSYS_ID}
	</update>
	
	<!-- 更新理赔状态 -->
	<update id="updateStateByPolicyNo" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			CLAIMSSTATES = #{CLAIMSSTATES},
			ISREMIND = #{ISREMIND},
		CLAIMSYS_ID = CLAIMSYS_ID
		where 
		OCCURTIME = #{OCCURTIME}
	</update>
	
	<!-- 设置提醒 -->
	<update id="updateSetRemind" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			ISREMIND = #{ISREMIND},
		CLAIMSYS_ID = CLAIMSYS_ID
		where 
		TO_DAYS(NOW()) - TO_DAYS(LASTUPDATE) >= 7
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			CLAIMSYS_ID = #{CLAIMSYS_ID}
	</select>
	
	<!-- 通过PolicyNo获取理赔信息 -->
	<select id="findByPolicyNo" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			POLICYNO = #{POLICYNO}
	</select>
	
	<!-- 通过PolicyNo查询是否提示用户 -->
	<select id="findUpdateFlag" parameterType="pd" resultType="pd">
		select 
			POLICYNO,
			UPDATEFLAG
		from 
		<include refid="tableName"></include>
		where 
			POLICYNO = #{POLICYNO} AND UPDATEFLAG = #{UPDATEFLAG}
	</select>
	
	<!-- 通过PolicyNo获取理赔状态 -->
	<select id="findStateByPolicyNo" parameterType="pd" resultType="pd">
		select a.POLICYNO,
			   a.CLAIMSSTATES,
		       b.STATE_CONTENT
		from 
		<include refid="tableName"></include> a,
		<include refid="tableStateName"></include> b
		where 
			a.POLICYNO = #{POLICYNO} AND a.CLAIMSSTATES = b.CLAIMSSTATES
	</select>
	
	<!-- 增加快递单号 -->
	<update id="addCourierNo" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			COURIERCOMPANY = #{COURIERCOMPANY},
			COURIERNO = #{COURIERNO}
		where 
		POLICYNO = #{POLICYNO}
	</update>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
		order by OCCURTIME desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			CLAIMSYS_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>