<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserManageMapper">
	
	<!--表名 -->
	<sql id="tableName">
		INS_USERMANAGE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		MOBILE,	
		PASSWORD,	
		SCORE,	
		USERTYPE,	
		NICKNAME,	
		EMAIL,	
		CARDID,	
		BANKCARD,	
		WECHAT,	
		PICWECHAT,	
		COMPNAME,	
		COMPNUM,	
		ADDRESS,	
		PHONE,	
		REMARK,	
		LASTLOGINTIME,	
		CREATETIME,	
		UPDATETIME,	
		USERMANAGE_ID,
		REALNAME,
		PIC1,
		PIC2,
		PIC3
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MOBILE},	
		#{PASSWORD},	
		#{SCORE},	
		#{USERTYPE},	
		#{NICKNAME},	
		#{EMAIL},	
		#{CARDID},	
		#{BANKCARD},	
		#{WECHAT},	
		#{PICWECHAT},	
		#{COMPNAME},	
		#{COMPNUM},	
		#{ADDRESS},	
		#{PHONE},	
		#{REMARK},	
		#{LASTLOGINTIME},	
		#{CREATETIME},	
		#{UPDATETIME},	
		#{USERMANAGE_ID},
		#{REALNAME},
		#{PIC1},
		#{PIC2},
		#{PIC3}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			USERMANAGE_ID = #{USERMANAGE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			MOBILE = #{MOBILE},
			SCORE = #{SCORE},
			NICKNAME = #{NICKNAME},
			EMAIL = #{EMAIL},
			CARDID = #{CARDID},
			BANKCARD = #{BANKCARD},
			WECHAT = #{WECHAT},
			PICWECHAT = #{PICWECHAT},
			COMPNAME = #{COMPNAME},
			COMPNUM = #{COMPNUM},
			ADDRESS = #{ADDRESS},
			PHONE = #{PHONE},
			REMARK = #{REMARK},
			LASTLOGINTIME = #{LASTLOGINTIME},
			CREATETIME = #{CREATETIME},
			UPDATETIME = #{UPDATETIME},
			REALNAME = #{REALNAME},
			USERTYPE = #{USERTYPE},
			PIC1=#{PIC1},
			PIC2=#{PIC2},
			PIC3=#{PIC3},
		USERMANAGE_ID = USERMANAGE_ID
		where 
		USERMANAGE_ID = #{USERMANAGE_ID}
	</update>
	
	<!-- 修改 -->
	<update id="editype" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			REMARK = #{REMARK},
			USERTYPE = #{USERTYPE},
		USERMANAGE_ID = USERMANAGE_ID
		where 
		USERMANAGE_ID = #{USERMANAGE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			USERMANAGE_ID = #{USERMANAGE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			USERMANAGE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	
	<!-- 通过手机号获取数据 -->
	<select id="getByName" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			MOBILE = #{MOBILE}
	</select>
	
	<!-- 通过email获取数据 -->
	<select id="getByEmail" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			EMAIL = #{EMAIL}
	</select>
	
	<!-- 通过nickname获取数据 -->
	<select id="getByNick" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			NICKNAME = #{NICKNAME}
	</select>
	
	<update id="updatePass" parameterType="pd" >
		update
		<include refid="tableName"></include>
		set
		PASSWORD = #{PASSWORD}
		where
			USERMANAGE_ID = #{USERMANAGE_ID}
	</update>
	
</mapper>